{% block workshop_wishlist_list %}
    <sw-page class="workshop-wishlist-list">
        <template slot="smart-bar-actions">
            <sw-button variant="primary" @click="getWishListProducts">Refresh</sw-button>
        </template>

        <template slot="content">
            <sw-entity-listing
                v-if="products"
                :items="products"
                :repository="repository"
                :allowColumnEdit="false"
                :allowInlineEdit="false"
                :showSettings="false"
                :columns="columns">
            </sw-entity-listing>
        </template>
    </sw-page>

{%  endblock  %}
